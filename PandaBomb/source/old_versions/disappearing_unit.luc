module disappearing_unit (
    input timer[16],  // timer
   // input rst,  //
    output ledcontrol[1] //led control signal=1 if need tp disappear
  ) {

  always {
    ledcontrol = 0;
    //0x000000: black, shows the path
    //0x00FF00: red, shows current position of Panda
    //0x00FFFF: pink, shows the goal
    //0x0000FF: blue, shows the obstacles
    if(timer>16b001010){  //more than 10 seconds
  ledcontrol=1;
  }
}
