module slowtimer(
    input clk,  // clock
    input rst,  // reset
    input time_in], //in binary
    output time_out, //in binary
    input orientation_in[2],
    output orientation_out[2];

){
  sig mod[16];
    counter slowclock(#SIZE(1),#DIV(26),.clk(clk),.rst(rst));
    alu alu;

always{

    time_out = slowclock.value;
    alu.a = time_in;
    alu.b = 10;
    alu.alufn = b000011;
    mod = alu.out;
    
    
    //todoï¼š calc modulo
    
    
    //change orientation
    if ( mod == 0){
        if (orientation_in < b11){orientation_out = orientation_in + 1;}
        else {orientation_out = 0;}
    }

  }
}